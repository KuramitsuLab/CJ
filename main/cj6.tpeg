NOT_HIRA = !NOUN !ADWORD

IGNORED = 
    / 'ください'
    / 'です'

// 接続詞, 連体詞
Adword = { 
    ADWORD
    #Ad 
} _Noun?

Adword2 = { 
    ADWORD2
    #Ad 
} _Noun?

ADWORD2 = 'ある' / 'また' / 'もし' / 'でも' / 'が'
// もし => 何もしません
// また、またがる

// 助数詞
// Code に数量を表す語が続く

Measure = {
    UnitPrefix?
    ( Code ![はをにのへでもがか] / NumericNoun ) 
    !NONUNIT Unit
    UnitPostfix?
    #Measure
} _Noun?

UnitPrefix = 
    / { '約' / 'およそ' #Aprox }
    / { 'もう' / 'さらに' / '更に' #More }
    / { '高々'/ 'たかだか' / '多くとも' / '最大' #AtMost }
    / { '少なくとも' / '最小' #AtLeast }

NumericNoun = {
    '複数' / [一二三毎数先今次]  // 複数回 毎回 今回
    #Noun
}

// 単位
// カタカナ (例. ドル、メートル)
// もしくは、cjdic/UNIT 単位辞書に登録する

Unit = {
    @choice('cjdic/UNIT.txt') / KATA+
    #Unit
}

NONUNIT = @choice('cjdic/NONUNIT.txt')

UnitPostfix = 
    / { '程' / 'ほど' #Aprox }
    / { 'ごと' / '毎' / 'ずつ' #Each }
    / { '以上' #Gte }
    / { '以下' #Lte }
    / { ('未満' / 'より小さ')  #Lt }
    / { 'より大き' #Gt }

// 名詞
// 平仮名が含まれない字句は外来語（名詞）とする
//   ForeignNoun  例. クラス・メソッド
// 平仮名が含まれる名詞は
//  あらかじめ辞書に登録する  DictNone 
//  「奥の細道」のようにカッコで書く  NewNoun

example Sentence ハワイについて
example Sentence ハワイに着いて

NounChunk =
    / Code _Rubi? (_NounVerb / _Noun)?
    / DictNoun _Rubi? (_NounVerb / _Noun)?
    / NewNoun _Rubi? (_NounVerb / _VerbRA5 / _Noun)?
    / DefNoun _Rubi? (_NounVerb / _Noun)?
    / PatNoun _Rubi? (_NounVerb / _VerbRA5 / _Noun)?

_Rubi = {^
    [(（] (Chunk IGNORED? / { TEN #Ten} / Symbol / Error)*  [)）]
    #Rubi
}

DictNoun = {
    NOUN
    #Noun
}

DefNoun =
    / '「' { @def(DEFNOUN, '定義語') #Phrase } '」'
    / '『' { (!'』' .)* #Phrase } '』'
    / '【' { (!'】' .)* #Phrase } '】'
    / '〔' { (!'〕' .)* #Phrase } '〕'

DEFNOUN = (!'」' .)+

NewNoun = @in('定義語')

PatNoun = {
    PATNOUN2 NSUFFIX?
    / 'お' PATNOUN NSUFFIX?
    #PNoun
} (&'ま' {^ #Verb } _Polite )?    // 必要あり+ません

PatNounC = {
    NONHIRA PATVERB? NSUFFIX?
    #PNoun
} _Noun?

PATNOUN = 
    / PATVERB NONHIRA+ NSUFFIX?
    / NONHIRA ( HIRAPAT / NONHIRA+)? 

PATNOUN2 = 
    / PATVERB NONHIRA+ NSUFFIX?
    / NONHIRA HIRAPAT
    / NONHIRA NONHIRA ( HIRAPAT / NONHIRA+)? 


PATVERB = 
    / (VERB5KA/VERB5KAC) 'き'
    / (VERB5SA/VERB5SAC) 'し' ![たてまなよず]
    / (VERB5TA/VERB5TAC) 'ち'
    / (VERB5NA/VERB5NAC) 'に'
    / (VERB5MA/VERB5MAC) 'み'
    / (VERB5RA/VERB5RAC) 'り'
    / (VERB5WA/VERB5WAC) 'い'
    / (VERB5GA/VERB5GAC) 'ぎ'
    / (VERB5BA/VERB5BAC) 'び'
    / !'でき' VERB1      // 「行動でき」る

// ![たてまなよ] 到達しよう　到達しない 到達します等を弾く

HIRAPAT = PATVERB / NONHIRA HIRAPAT

NSUFFIX = 'どおし' / 'どうし' / 'さん' / 'ちゃん' / 'ら'

EVEN = 'さえ' / 'すら'

// 接辞

_Noun = TEN? NOT_HIRA _NounImpl
_NounImpl = // もの
    / &[でだ] _NounDE 
    / &'に'   _NounNI
    / &'と'   _NounTO
    / &'な'　 _NounNA
    / {^ {'から' / 'より'} #From } _Noun?
    / {^ {'まで'} #Until } _Noun?
    / {^ {'へ'} #To } _Noun?        // Aへの, Aへは
    / {^ {'かぎり' / '限り'} #AsLong } _Noun? // その場かぎり
    / {^ {'か' ('どうか'/'否か')} #Whether } _Noun? // 可能かどうか
    / {^ {'か'} !'か' #OrElse } _Noun? // 可能か不可能か
    / {^ {'のみ'/'だけ'/'ばかり'/'さえ'/'しか'} #Only } _Noun?   // 彼のみを
    / {^ {'らし'} #Likely } _MoodNA   // 単語らしい
    / {^ {'ごと' / 'ずつ' } #Each } _Noun?   // 単語ごと+で
    / {^ {'そう'}  #Seem } _Noun?   // 正確そう
    / {^ {'さ' ![せれ]} #Noun } _Noun? // 正確さ  洗練させる　洗練される
    / {^ {'を'} #Object }
    / {^ {'や' / 'および' / '及び'} #AndOr }
    / {^ {'または'} #Or }
    / _NounOf

_NounOf = 
    / {^ {('こそ' / [はがも])} #Subject }
    / {^ {'の' NOT_HIRA 'よう'} #Like} _Noun?
    / {^ {'の'} #OfThing } _Noun // Aのは Aの(もの)に
    / {^ {'の'} #Of } 

_Like = {^ 'よう' #Like } _Noun?

_BaseNA = 
    / {^ {'など'} #Etc } _Noun?   // 単語など+で
    / {^ {'なら' 'ば'?} #If }  // 正確ならば

_NounNA =
    / _BaseNA
    / {^ 'な' #Become} _VerbRA5
    / {^ {'な' &[しさ] NOT_HIRA [しさ] } #No } _Noun?   // 単語なし+の
    / {^ {'ながら'  } #Though } _Noun?   // 単語なし+の
    / {^ {'な'} ![いくか] #Adjective } _Base? // 正確な

_BaseDE =
    / { {'でしょう' / 'だろう'} #WouldBe } _Base?
    / { {'で' NOT_HIRA 'す'} #Is　} _Base?

_NounDE =
    / { 'で' NOT_HIRA EVEN #Even } _Noun     // 首相ですら 
    / { 'で' NOT_HIRA #Is } {^ 'な' #Not} _MoodNA 
    / { {'でしょう' / 'だろう'} #WouldBe } _Base?
    / { {'でした' / 'だった'}  #Was } _Past?
    / { {'で' NOT_HIRA 'す'} #Is　} _Base?
    / { 'でき' #Can　} _Verb1
    / { {'だ' } !'け' #Is } _Base?
    / {^ {'で'} #Object } (Chunk /_Noun)?    // Aでの~,

_NounNI = 
    / {^ 'について' #About } _Noun?
    / {^ 'に' NOT_HIRA EVEN #Even } _Noun?
    / {^ 'に' NOT_HIRA 'わたって' #Across } _Noun?
    / {^ 'に' (('かか'/'関') 'わらず' / '関係なく') #Despite } _Noun?
    / {^ 'に' 'とって' #For } _Noun?
    / {^ 'に関' #About } _NounVerb
    / {^ 'に対' #Against } _NounVerb
    / {^ {'により'} #By }
    / {^ 'に' NOT_HIRA 'よ' #By } _VerbRA5
    / {^ 'に' NOT_HIRA 'な' #Become } _VerbRA5
    / {^ {'に'} NOT_HIRA #Let } _NounVerb
    / {^ {'に'} #Object } (Chunk / _Noun)?

_BaseNI = // するに
    / {^ 'に' NOT_HIRA 'も' ('かかわらず' / '関わらず') #InSpiteOf }
    / {^ 'に' (NOT_HIRA 'は') #That }
    / {^ 'につれて' #As }
    / {^ 'に' #That }


_NounTO = 
    / {^ {'と'} NOT_HIRA #Let } _NounVerb
    / {^ 'と' NOT_HIRA 'な' #Become } _VerbRA5
    / { 'と' #Take } _VerbRA5
    / {^ {'と' 'ともに'? } ( NOT_HIRA 'か')? #With } _Noun?

_Base = TEN? _BaseImpl
_BaseImpl = // する+ した+
    / _May 
    / _Should
    / &'な' _BaseNA
    / &'に' _BaseNI
    / &'で' _BaseDE
    / {^ 'しかありません' #Only }
    / {^ 'けれども' #Though } // けれども
    / {^ 'らし' #Sound } _MoodNA   // するらしい
    / {^ {'のみ'/ 'だけ'} #OnlyThat } _Noun?
    / {^ {'ため' / '為' / 'から' } #Because } _Noun?
    / {^ {'たび' / 'ごと'} #Whenever } _Noun? // 置換されるたびに
    / {^ {'のですが' / 'のだが'} #Though } _Noun? // から
    / {^ {'ので'} #Because } _Noun? // から
    / {^ {'かぎり' / '限り'} #AsLong } _Noun?
    / {^ {'の'? &'か' NOT_HIRA 'か' ('どうか'/'否か')? }  #Whether } _Noun?
    / {^ {'とき' / 'と' TEN / '時' / '場合' / '際' / 'ところ'} !_Noun  #If }
    / {^ {'とき' / '時' / '場合' / '際' / 'ところ'} #Case } _Noun?
    / {^ {'のなら' 'ば'?} #If }
    / {^ {'とおり' / 'よう'} #As } _Noun?
    / {^ {'と' 'か'?} #That } _Noun?
    / {^ {'まで'} #Until } _Noun?
    / {^ {'ほど'} #Case } _Noun?
    / {^ {'まま'} #AsIs } _Noun?
    / {^ {'には'} #That }
    / {^ {'の'} #That } _Noun?

_Past = // した
    / {^ {'り'} #Noun } _Noun
    / {^ {'り'} #Then }
    / {^ {'な'? 'ら' 'ば'?} #If } 
    / _Base


_May =
    {^ 'かも' [知し] 'れ' ('ない' / 'ません') #May } _Base?

_Should = 
    {^ ('べき' / 'べし' / 'はず' ) #Should } _Noun?


Exist = { 'あ'  #Exist }　_MoodA
_Exist = {^ 'あ' #Exist }　_MoodA

_MoodA = // あ+る
    / 'り' &'ま' _Polite
    / {^ 'る' #Base } _Base?
    / {^ 'った' #Past } _Past?
    / {^ 'れば' #If }
    / {^ 'ってから' #After }
    / {^ 'っても' #EvenIf }
    / {^ 'って' #And } (_Noun / Ten)

VerbChunk = 
    / VerbKA5 _VerbKA5
    / VerbSA5 _VerbSA5
    / VerbTA5 _VerbTA5
    / VerbNA5 _VerbNA5
    / VerbMA5 _VerbMA5
    / VerbRA5 _VerbRA5
    / VerbWA5 _VerbWA5
    / VerbGA5 _VerbGA5
    / VerbBA5 _VerbBA5
