/* CJ Controlled Japanese 文法 */

/**
* トップの規則
* 文はChunkの繰り返しとみなす
*/

Sentence = {
    (Chunk IGNORED? / { TEN #Ten} / Symbol / Error )* EOS
    #Sentense
}

//packrat = ''

Chunk =
    / Adword       // 接続詞,副詞,連体詞
    / Measure      // 助数詞
    / Adjective    // 形容詞節
    / VerbChunk    // 動詞節
    / Group        // 括弧付き
    / NounChunk    // 名詞節, 形容動詞節
    / Adword2      // 2文字以下のひらがな
    / VerbC        // 1文字の動詞
    / PatNounC     // 1文字の名詞

// Group

Group = {
    [(（] (Chunk IGNORED? / { TEN #Ten} / Error)*  [)）]
    #Group
} (_Noun)?

VChunk =
    / Adjective
    / VerbChunk

// 辞書

// 接続詞, 連体詞, 副詞
ADWORD = @choice('cjdic/ADWORD.txt')

// 名詞
NOUN = @choice('cjdic/NOUN.txt')

// 形容詞
ADJ = @choice('cjdic/ADJ.txt') &ADJ_CHECK

