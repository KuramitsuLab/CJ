VerbTA5C = { VERB5TAC &[た-とっ] #VerbTA5 }
VerbNA5C = { VERB5NAC &[な-のん] #VerbNA5 }
VerbMA5C = { VERB5MAC &[ま-もん] #VerbMA5 }
VerbRA5C = { VERB5RAC &[ら-ろっ] #VerbRA5 }
VerbWA5C = { VERB5WAC &[わいうえおっ] #VerbWA5 }
VerbGA5C = { VERB5GAC &[が-ごい] #VerbGA5 }
VerbBA5C = { VERB5BAC &[ば-ぼん] #VerbBA5 }
Verb1C = { VERB1C !KANJI #Verb1 }

// 動詞をパターンから抽出する
// パターンは漢字１文字+活用型
// 上一段, 下一段は抽出しない

PVerb = &(KANJI HIRA) (
   { KANJI [いきぎじちみりえけげせぜてべねれめ] ![だで] #PVerb1 } _Verb1
   / { KANJI &[ら-ろっ] NOT_HIRA #PVerbRA5 } _VerbRA5
   / { KANJI &[さ-そ] NOT_HIRA #PVerbSA5 } _VerbSA5
   / { KANJI &[わいうえおっ] !('い' [たて]) NOT_HIRA #PVerbWA5 } _VerbWA5
   / { KANJI &[か-こい] NOT_HIRA #PVerbKA5 } _VerbKA5
   / { KANJI &[ま-もん] NOT_HIRA #PVerbMA5 } _VerbMA5
   / { KANJI &[た-とっ] NOT_HIRA #PVerbTA5 } _VerbTA5
   / { KANJI &[が-ごい] NOT_HIRA #PVerbGA5 } _VerbGA5
   / { KANJI &[ば-ぼん] NOT_HIRA #PVerbBA5 } _VerbBA5
   // { KANJI &[な-のん] #PVerbNA5 } _VerbNA5
)

_MoodNA = //な
    / {^ {'ければ'} #If }
    / {^ {'くな'} #Not } _MoodNA
    / {^ {'くな'} #Become } _VerbRA5
    / {^ {'くて'} #Noun } _Noun // なくてはいけません
    / {^ {'く' } &[はも] #Noun } _Noun // 大きくはない、大きくはありません
    / {^ {'くに'} #Adverb }
    / {^ {'くても'} #EvenIf }
    / {^ {'く' } 'て'? #And }
    / {^ {'い'} 'です'? #Base } ({^ 'で' #And} / _Base)?
    / {^ {'かった'} 'です'? #Past } _Past?
    / {^ {'さ'} #Noun } _Noun?

_Polite =
    / {^ {('ます' / 'ましょう')} #Base } _Base?
    / {^ {'ません' 'でした'?} #Not } _Base?
    / {^ {'ましたら'} #If }
    / {^ {'ました'} #Past } _Past?
    / {^ {'ましても'} #EvenIf }
    / {^ {'まして'} #And }

_CanMood = // でき+　　られ+
    / &'ま' _Polite
    / {^ {'な'} #Not } _MoodNA
    / {^ {'る'} #Base } _Base?
    / {^ {'た'} #Past } _Past?
    / {^ {'ず' #Not} #Noun } _Noun?
    / {^ {'れば'} #If }
    / {^ {'てから'} #After }
    / {^ {'ても'} #EvenIf }
    / {^ {'よう'} #Would } _Base?
    / 'て' (_TryMood / _Noun / Ten)


MOOD1 = [まなるたれてず]

// 補助動詞
_TryMood = NOT_HIRA _TryMoodImpl
_TryMoodImpl = 
    / {^ {'み'} #TryTo } _Verb1 // 笑ってみる
    / {^ {'い'} #Going } _VerbKA5
    / {^ {'い'} #Now } _Verb1    // 笑っている, 増加していく
    / _Exist                 // 笑ってある 
    / Come                  // 笑ってくる


_VerbA = // 書か+ない   探さ+ない
    / {^ {'な'} #Not } _MoodNA
    / {^ {'ず' #Not} #Noun } _Noun?
    / {^ {'さ'? 'せ' 'られ'?} #Make } _Verb1
    / {^ {'れ'} #Been } (_Verb1 / Ten) 

_VerbIX = // 書い+て   探し+て　
    / {^ {'た'} NOT_HIRA #WantTo } _MoodNA   // 特例. 記録したい
    / {^ {'た'} #Past } _Past?
    / {^ {'てから'} #After } _Noun?
    / {^ {'て' (&'も' NOT_HIRA .)} #EvenIf }
    / {^ {'て'} #Noun } _Noun
    / {^ {'て'} IGNORED? #And } _TryMood?

_VerbIXD = // 遊んだ   遊んで
    / {^ {'だ'} #Past } _Past?
    / {^ {'でから'} #After } _Noun?
    / {^ {'で' (&'も' NOT_HIRA .)} #EvenIf }
    / {^ {'で'} #Noun } _Noun
    / {^ {'で'} IGNORED? #And } _TryMood?

_VerbI = // 書き+つつ  探し+つつ　
    / &'ま' _Polite
    / {^ {'た'} #WantTo } _MoodNA   // 書きたい
    / {^ {('やす' / 'よ' )} #EasyTo } _MoodNA  // 書きやすい
    / {^ {('にく' / 'がた' / 'づら')} #HardTo } _MoodNA //書きがたい
    / {^ {'直す' / 'なお' } #Again } _VerbSA5 //書きがたい
    / {^ {'がち'}  #Likely } _Noun? //休みがちだ
    / {^ {('つつ' / 'ながら')} #While }

_Verb = 
    / {^ #Noun } ( _Noun / TEN / EOF) // 書出し
    / {^ (VerbChunk / NounChunk ) #And } 
    / Chunk?

_VerbU = // 書く　探す
    / _Base?

_VerbE = // 書け+ば  探せ+ば
    / {^ 'ば' #If }
    / {^ #AbleTo} _Verb1

_VerbO = // 書こ+う　探そ+う
    / {^ 'う' #Will } _Base?

// カ行変格活用動詞
Come = 
    / { ('こ' &'れ'/ '来') #Come } {^ {'れ'} &MOOD1 #Been } _Verb1 
    / { ('こ' !'れ'/ '来') #Come } _VerbA // これる vs. これは
    / { ('き'/'来')  #Come } (_VerbIX / _VerbI)
    / { 'くる'/'来る' #Come } _Base?
    / { 'くれ'/'来れ' #Come } {^ 'ば' #If}

Do = // する
    / { 'する' #Do } _VerbU 
    / { 'す' #Do } ('れ' _VerbE) / _Should 
    / { 'し' #Do } (_VerbA / 'よ' _VerbO / _VerbIX / _VerbI ) 
    / { 'され' #Been } _Verb1 
    / { 'でき' #Can } _Verb1

_NounVerb = &[すずしじさせで] NOT_HIRA _NounVerbImpl

_NounVerbImpl = // 例. 行動する 論じる
    / {^ {[すず] 'る'} #Do } _VerbU
    / {^ {[すず]} #Do } ('れ' _VerbE / _Should) 
    / {^ {[しじ]} #Do } (_VerbA / 'よ' _VerbO / _VerbIX / _VerbI / _Verb )
    / {^ {'され'} #Been } (_Verb1 / Ten) 
    / {^ {'させ'} #Make } (_Verb1 / Ten)
    / {^ {'せよ'} #Command } _Base?
    / {^ {'せず' #Not} #Noun } _Noun?
    / {^ {'でき'} #Can } (_Verb1 / Ten)

_VerbKA5 = // 書
    / {^ {'か'} #Verb } _VerbA
    / {^ {'き'} #Verb } (_VerbI / _Verb )
    / {^ {'い'} #Verb } _VerbIX
    / {^ {'く'} #Verb } _VerbU
    / {^ {'け'} #Verb } _VerbE
    / {^ {'こ'} #Verb } _VerbO

_VerbSA5 = // 探 出
    / {^ {'さ'} #Verb } _VerbA  // ない
    / {^ {'し'} #Verb } _VerbIX // て
    / {^ {'し'} #Verb } (_VerbI / _Verb )  // ながら
    / {^ {'す' 'る'?} #Verb } _VerbU  // 達すると
    / {^ {'せ'} #Verb } _VerbE  // ば
    / {^ {'そ'} #Verb } _VerbO  // う


_VerbTA5 = // 勝
    / {^ {'た'} #Verb } _VerbA  // ない
    / {^ {'ち'} #Verb } (_VerbI / _Verb )  // ながら
    / {^ {'っ'} #Verb } _VerbIX // て
    / {^ {'つ'} #Verb } _VerbU  // 
    / {^ {'て'} #Verb } _VerbE  // ば
    / {^ {'と'} #Verb } _VerbO  // う

_VerbNA5 = // 死
    / {^ {'な'} #Verb } _VerbA  // ない
    / {^ {'に'} #Verb } (_VerbI / _Verb )  // ながら
    / {^ {'ん'} #Verb } _VerbIXD // て
    / {^ {'ぬ'} #Verb } _VerbU  // 
    / {^ {'ね'} #Verb } _VerbE  // ば
    / {^ {'の'} #Verb } _VerbO  // う

_VerbMA5 = // 読
    / {^ {'ま'} #Verb } _VerbA  // ない
    / {^ {'み'} #Verb } (_VerbI / _Verb )  // ながら
    / {^ {'ん'} #Verb } _VerbIXD // て
    / {^ {'む'} #Verb } _VerbU  // 
    / {^ {'め'} #Verb } _VerbE  // ば
    / {^ {'も'} #Verb } _VerbO  // う

_VerbRA5 = // 切
    / {^ {'ら'} #Verb } _VerbA  // ない
    / {^ {'り'} #Verb } (_VerbI / _Verb )  // ながら
    / {^ {'っ'} #Verb } _VerbIX // て
    / {^ {'る'} #Verb } _VerbU  // 
    / {^ {'れ'} #Verb } _VerbE  // ば
    / {^ {'ろ'} #Verb } _VerbO  // う

_VerbWA5 = // 笑
    / {^ {'わ'} #Verb } _VerbA  // ない
    / {^ {'い'} #Verb } (_VerbI / _Verb )  // ます
    / {^ {'っ'} #Verb } _VerbIX // て
    / {^ {'う'} #Verb } _VerbU  // 
    / {^ {'え'} #Verb } _VerbE  // ば
    / {^ {'お'} #Verb } _VerbO  // う

_VerbGA5 = // 防
    / {^ {'が'} #Verb } _VerbA  // ない
    / {^ {'ぎ'} #Verb } (_VerbI / _Verb )  // ながら
    / {^ {'い'} #Verb } _VerbIXD // て
    / {^ {'ぐ'} #Verb } _VerbU  // 
    / {^ {'げ'} #Verb } _VerbE  // ば
    / {^ {'ご'} #Verb } _VerbO  // う

_VerbBA5 = // 遊
    / {^ {'ば'} #Verb } _VerbA  // ない
    / {^ {'び'} #Verb } (_VerbI / _Verb )  // ながら
    / {^ {'ん'} #Verb } _VerbIXD // て
    / {^ {'ぶ'} #Verb } _VerbU  // 
    / {^ {'べ'} #Verb } _VerbE  // ば
    / {^ {'ぼ'} #Verb } _VerbO  // う

// 「それる」は除外

_Verb1 = // 過ぎ　述べ　視　でき
    / {^ {'る'} #Verb } _VerbU  // 
    / {^ {'れ'} #Verb } _VerbE  // ば
    / {^ {'られ'} #Been } _Verb1 // 述べられています
    / {^ {'よ'} #Verb } _VerbO  // う    
    / _VerbA  // ない
    / _VerbIX // て
    / _VerbI
    / _Verb

/* 形容詞 */

Adjective = 
    / DictAdj _Adjective
    / (GoodAdj / Not ) !'め' _Adjective

// 形容詞: 美し 大き

DictAdj = { 
    ADJ
    #Adjective 
}

GoodAdj = { 'よ' #Good }
Not = { 'な' #Not }

ADJ_CHECK = 'そう' / '過ぎ' / 'すぎ' / [さかくけいめ]

_Adjective =
    / {^ {'過ぎ' / 'すぎ'} #Too } _Verb1
    / {^ {'さ' !'れ' } #Noun } _Noun?
    / {^ {'そう'} #Like } _Noun? 
    / {^ {'め'} #More } _Verb1
    / _MoodNA 

/* コードは名詞扱い */

Code = Expression SPC* / {
    [A-Za-z0-9_] [A-Za-z0-9.(){}, +\-*/%\\]*
    #Code
}

Expression = Product ({ ^ '+' Product #Add } / { ^ '-' Product #Sub })*
Product = Value ({ ^ '*' Product #Mul } / { ^ '/' Product #Div })*
Value = Int / '(' Expression ')'
Int = { [0-9]+ #Int }


// CJ.TPEG マッチしない名詞はエラーとしてスキップする

Symbol = {
    (!HIRA !NONHIRA .)+
    #Symbol
} _Noun?

Error = {
    ( NOT_HIRA ![()（）] HIRA)+
    #err
}


/* 文字コード */

Ten = { TEN? #Ten }
_Ten = {^ TEN? #Ten }

SPC = [ ]
EOF = !.
EOS = [。．.\n]? EOF
TEN = [、，,：　 \n]
KANJI = [㐀-䶵一-龠々〇〻ーご]
KATA = [ァ-ヶー・]
HIRA = [ぁ-ん]
NONHIRA = [㐀-䶵一-龠々〇〻ーごァ-ヶー・] 
NONHIRA2 = (!HIRA !TEN ![()（）0-9A-Za-z] .)
ALPHA = [a-zA-Zａ-ｚＡ-Ｚ]
NUM = [\.,0-9０-９一二三四五六七八九十百千万億兆京垓秭穰溝澗正載極]
SYMBOL = [^＾~〜\-ー_＿!！?？#＃$＄&＆=＝@＠*＊+＋/・]


